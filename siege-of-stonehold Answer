while True:
    health = hero.health
    enemy = hero.findNearestEnemy()
    green = hero.findFlag("green")
    black = hero.findFlag("black")
    if health < 120:
        hero.moveXY(19, 69)
    elif enemy:
        if hero.isReady("cleave"):
            hero.cleave(enemy)
        else:
            hero.attack(enemy)
